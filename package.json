{
	"author": "joabssilveira",
	"devDependencies": {
		"@commitlint/cli": "^20.4.1",
		"@commitlint/config-conventional": "^20.4.1",
		"husky": "^9.1.7",
		"standard-version": "^9.5.0",
		"typescript": "^5.6.3"
	},
	"engines": {
		"node": ">=10"
	},
	"files": [
